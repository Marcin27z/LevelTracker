<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marcin.munchkinleveltracker.GameActivity">

    <fragment
        android:id="@+id/levelControlFragment"
        android:name="com.example.marcin.munchkinleveltracker.LevelControlFragment"
        android:layout_width="0dp"
        android:layout_height="345dp"
        app:layout_constraintBottom_toTopOf="@+id/levelDisplayFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:id="@+id/levelDisplayFragment"
        android:name="com.example.marcin.munchkinleveltracker.LevelDisplayFragment"
        android:layout_width="0dp"
        android:layout_height="147dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levelControlFragment" />
</android.support.constraint.ConstraintLayout>
