<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color -->
        <item name="colorControlActivated">@color/colorMan</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorWoman</item>

        <!-- inactive track color  -->
        <item name="android:colorForeground">@color/colorWoman</item>
    </style>

</resources>
